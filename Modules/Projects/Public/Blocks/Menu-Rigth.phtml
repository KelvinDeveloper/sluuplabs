			},

			delete: {
				icon: '<i class="material-icons">&#xE872;</i>',
				text: 'Excluir página',
				exec: function(This){
					
					var isDelete 	= confirm("Tem certeza que deseja deletar esta página?");

					if( isDelete == true ){
						$.ajax({ 
					    	type: "POST",
					    	dataType: "json",
					    	cache: false,
					    	data: {

			Loop 		= 0;

		while( LoopName ){
			if( $('#p-pages li[data-title="' + NewPage + ( Loop === 0 ? '' : '-' + Loop ) + '"]').length > 0 ){
				Loop++;
			} else {
				NewPage 	= NewPage + ( Loop === 0 ? '' : '-' + Loop );
				LoopName 	= false;
			}
		}

		$.ajax({ 
	    	type: "POST",
	    	dataType: "json",
	    	cache: false,
	    	data: {
